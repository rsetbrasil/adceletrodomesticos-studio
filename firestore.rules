rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Regra geral: Permite que qualquer pessoa leia os dados de qualquer coleção.
    // Isso é essencial para que o catálogo de produtos, categorias, etc.,
    // sejam visíveis para os visitantes do site.
    // A escrita (alteração/exclusão) de dados permanece bloqueada por padrão.
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null; // Permite escrita apenas para usuários autenticados (admin/vendedor)
    }
  }
}
