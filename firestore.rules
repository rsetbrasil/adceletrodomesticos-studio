
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read for products, categories, and store settings
    // as these are needed for the public-facing storefront.
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null; // Authenticated users can write
    }

    match /categories/{categoryId} {
      allow read: if true;
      allow write: if request.auth != null; // Authenticated users can write
    }

    match /config/storeSettings {
      allow read: if true;
      allow write: if request.auth != null; // Authenticated users can write
    }

    // Orders can be created by anyone (checkout process).
    // Reading and updating them requires authentication.
    match /orders/{orderId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }

    // Users can be read or written to by an admin.
    // We check for a custom claim 'role' on the auth token.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.token.role == 'admin';
    }
  }
}
