
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // As coleções de produtos e categorias são públicas para leitura, para que os clientes possam ver a loja.
    // A escrita requer autenticação (somente administradores/vendedores logados podem alterar).
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Apenas usuários autenticados podem ler ou escrever na coleção de pedidos.
    match /orders/{orderId} {
      allow read, write: if request.auth != null;
    }
    
    // Apenas usuários autenticados podem ler a lista de usuários ou editar um usuário.
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }
    
    // Apenas usuários autenticados podem ler ou escrever nas configurações.
    match /config/{configId} {
      allow read, write: if request.auth != null;
    }
    
    // Apenas usuários autenticados podem ler a lista de logs ou criar um novo.
    match /auditLogs/{logId} {
        allow read, create: if request.auth != null;
    }
    
    // Apenas usuários autenticados podem gerenciar os pagamentos de comissão.
    match /commissionPayments/{paymentId} {
        allow read, write: if request.auth != null;
    }
  }
}
