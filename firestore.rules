
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if a user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check user roles
    // Note: This relies on the user being authenticated via Firebase Auth
    // and their UID matching a document in the /users collection.
    // For this prototype, we're not using Firebase Auth, so these rules are simplified.
    // In a real app, you would secure these further.
    
    // PUBLIC: Anyone can read products, categories, and store settings
    match /products/{productId} {
      allow read: if true;
      allow write: if true; // Simplified for prototype
    }
    
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if true; // Simplified for prototype
    }
    
    match /config/storeSettings {
      allow read: if true;
      allow write: if true; // Simplified for prototype
    }
    
    // Anyone can create orders (checkout)
    // Authenticated users (admins) can manage them
    match /orders/{orderId} {
      allow create: if true;
      allow read, update, delete: if true; // Simplified for prototype
    }
    
    // Users can be queried for login, but not listed entirely.
    // Admins can manage them.
    match /users/{userId} {
      // Allow a query for login, but not a full collection read
      allow list: if request.query.where.size() == 1 &&
                   'username' in request.query.where;
      allow read, write: if true; // Simplified for prototype
    }
  }
}
