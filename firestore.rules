
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // PUBLIC: Anyone can read products, categories, and store settings.
    // This is necessary for the public-facing storefront to function.
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can write.
    }
    
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can write.
    }
    
    match /config/{docId} { // e.g., /config/storeSettings
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can write.
    }
    
    // CHECKOUT & ORDERS:
    // Anyone can create an order (checkout process).
    // Only authenticated users can read/update/delete orders (for the admin panel).
    match /orders/{orderId} {
      allow create: if true; 
      allow read, update, delete: if request.auth != null;
    }
    
    // USERS:
    // A user can be looked up by anyone for login purposes.
    // Full read/write access is restricted to authenticated users (admins manage, etc.)
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }
  }
}
