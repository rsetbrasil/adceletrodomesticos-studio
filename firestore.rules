rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // ATENÇÃO: Regra aberta para desenvolvimento. Permite leitura e escrita
    // em todos os documentos por qualquer pessoa.
    // NÃO USE EM PRODUÇÃO.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
