
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Public read access for products, categories, and settings
    match /products/{productId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    match /config/storeSettings {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    // Orders can be created by anyone (checkout), but only managed by authenticated users.
    match /orders/{orderId} {
      allow create: if true;
      allow read, update, delete: if isAuthenticated();
    }
    
    // Users can be created by anyone (for signup), but can only be managed by themselves or an admin
    match /users/{userId} {
      allow read, update, delete: if isAuthenticated() && request.auth.uid == userId;
      // This allows login functionality by querying the username
      allow list: if true;
    }
  }
}
