
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isRole(role) {
      // This is insecure for production if user roles can be read by clients.
      // It's suitable for this prototype where client-side role checking is acceptable.
      // In a real app, you'd use custom claims.
      return isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }
    
    function isAdmin() {
      return isRole('admin');
    }
    
    function isManager() {
      return isRole('gerente');
    }

    // PUBLIC: Anyone can read products, categories, and store settings
    match /products/{productId} {
      allow read: if true;
      allow write: if isAuthenticated(); // Allow any authenticated user to manage
    }
    
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAuthenticated(); // Allow any authenticated user to manage
    }
    
    match /config/storeSettings {
      allow read: if true;
      allow write: if isAuthenticated(); // Allow any authenticated user to manage
    }
    
    // ORDERS
    match /orders/{orderId} {
      allow create: if true; // Anyone can create an order (checkout)
      allow read, update, delete: if isAuthenticated(); // Only authenticated users can manage orders
    }
    
    // USERS
    match /users/{userId} {
      // Allow a user to read their own data
      allow read: if isAuthenticated() && request.auth.uid == userId;
      
      // Allow an admin to do anything
      allow write: if isAdmin();
      
      // Special rule for login: allow anyone to query the users collection by username
      allow list: if request.query.keys.hasAny(['username']);
    }
  }
}
