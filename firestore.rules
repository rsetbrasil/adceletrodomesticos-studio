
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read access for collections needed by customers
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can change products
    }

    match /categories/{categoryId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can change categories
    }
    
    match /config/{configId} {
        allow read: if true;
        allow write: if request.auth != null; // Only authenticated users can change settings
    }

    // Orders can only be accessed by authenticated users
    match /orders/{orderId} {
      allow read, write, create, delete: if request.auth != null;
    }

    // Users can only be managed by admins
    match /users/{userId} {
      allow read, create, update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      // Allow a user to see their own data if needed (not currently used, but good practice)
      allow read: if request.auth.uid == userId;
    }
    
    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
