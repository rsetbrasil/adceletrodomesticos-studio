rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regra geral: permite leitura pública, mas escrita apenas para autenticados
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Regras mais específicas por coleção para garantir que apenas usuários
    // logados possam modificar os dados.

    match /products/{productId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }

    match /categories/{categoryId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }

    match /orders/{orderId} {
      // Qualquer um pode criar um pedido (checkout), mas só autenticados podem alterar/deletar
      allow read: if true;
      allow create: if true;
      allow update, delete: if request.auth != null;
    }
    
    match /users/{userId} {
      // Apenas usuários autenticados podem ver ou modificar outros usuários
      allow read, write: if request.auth != null;
    }
    
    match /config/{configId} {
      // Apenas usuários autenticados podem ler ou modificar configurações
      allow read, write: if request.auth != null;
    }

    match /auditLogs/{logId} {
       // Apenas usuários autenticados podem criar ou ler logs
      allow read, create: if request.auth != null;
      allow update, delete: if false; // Ninguém pode alterar ou apagar logs
    }

    match /commissionPayments/{paymentId} {
       // Apenas usuários autenticados podem gerenciar pagamentos
      allow read, write: if request.auth != null;
    }
  }
}
