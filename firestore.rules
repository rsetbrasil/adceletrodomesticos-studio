
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAuthenticated() {
      return request.auth != null;
    }

    // PUBLIC DATA: Anyone can read these collections.
    match /products/{productId} {
      allow read: if true;
      allow write: if isAuthenticated(); // Only authenticated users can write
    }
    
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    match /config/{docId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // ORDERS: Anyone can create an order (checkout), but only authenticated users can manage them.
    match /orders/{orderId} {
      allow create: if true; 
      allow read, update, delete: if isAuthenticated();
    }
    
    // USERS: Only authenticated users can query for their own username. Admin can do more.
    match /users/{userId} {
      allow read, update: if isAuthenticated() && request.auth.uid == userId;
      allow create, delete, list: if isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
