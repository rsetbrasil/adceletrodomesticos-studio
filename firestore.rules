
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // PUBLIC DATA
    // Products, categories, and settings can be read by anyone.
    // Only authenticated users (admins/managers) can write.
    match /products/{productId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /config/{docId} {
       allow read: if true;
       allow write: if isAuthenticated();
    }

    // ORDERS
    // Anyone can create an order during checkout.
    // Only authenticated users can manage (read, update, delete) orders.
    match /orders/{orderId} {
      allow create: if true;
      allow read, update, delete: if isAuthenticated();
    }
    
    // USERS
    // Users can read/write their own data. This is essential.
    // In the future, we can add admin override rules here.
    match /users/{userId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }
  }
}
